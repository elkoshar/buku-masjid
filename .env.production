# Buku Masjid - Production Environment Configuration
# Copy this to .env and update the values for your production environment

# Application
APP_NAME="Buku Masjid"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_LOG_LEVEL=error
APP_URL=https://your-domain.com
APP_TIMEZONE="Asia/Makassar"
APP_TRUSTED_PROXIES=

# Logging
LOG_CHANNEL=daily
LOG_SLACK_WEBHOOK_URL=

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=buku_masjid_prod
DB_USERNAME=buku_masjid_user
DB_PASSWORD=your_secure_database_password_here
DB_ROOT_PASSWORD=your_secure_root_password_here

# Redis Cache (Optional)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# File Storage
FILESYSTEM_DRIVER=public
DISK_QUOTA=5GB

# Broadcasting
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
QUEUE_DRIVER=redis

# Mail Configuration (Configure for production)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# OAuth (Pusher - if needed)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Laravel Passport
PASSPORT_CLIENT_ID=
PASSPORT_CLIENT_SECRET=

# Application Specific
MASJID_NAME="Masjid Ar-Rahman"

# Security Headers
SECURE_HEADERS=true
FORCE_HTTPS=true

# Performance
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=60
PHP_MAX_INPUT_VARS=3000
PHP_UPLOAD_MAX_FILESIZE=100M
PHP_POST_MAX_SIZE=100M

# Monitoring (Optional)
SENTRY_LARAVEL_DSN=
TELESCOPE_ENABLED=false

# Backup Configuration (Optional)
BACKUP_NOTIFICATION_MAIL_TO=admin@your-domain.com
BACKUP_NOTIFICATION_SLACK_WEBHOOK_URL=